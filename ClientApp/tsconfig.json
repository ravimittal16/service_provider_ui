{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": ["./node_modules/@types"],
    "paths": {
      "@abp/*": ["./node_modules/abp-ng2-module/dist/src/*"],
      "@app/*": ["./src/app/*"],
      "@account/*": ["./src/account/*"],
      "@shared/*": ["./src/shared/*"],
      "@core-data/*": ["./src/core-data/*"],
      "@node_modules/*": ["./node_modules/*"]
    },
    "lib": ["es2018", "dom"]
  },
  "exclude": ["src/test.ts", "test.ts", "node_modules"],
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
